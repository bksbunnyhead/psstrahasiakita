<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kelompok16.supercow.HomeActivity"
    android:background="#f5f1db">
    <!--TODO : Semua string masih STUB. nanti pindahin semuanya ke strings.xml-->
    <!--TODO : Ganti font familinya jadi Elsie-->
    <!--TODO : Buat style/theme yang jadi definisi skema warnanya-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/homeBaseLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_home_layout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings_icon"
                android:id="@+id/icon_settings"
                android:adjustViewBounds="true"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:layout_alignParentLeft="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/center_social_layout"
                android:layout_toRightOf="@id/icon_settings"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/customarrow"
                    android:id="@+id/arrows_top"
                    android:adjustViewBounds="true"
                    android:maxWidth="40dp"
                    android:scaleType="center"
                    android:rotation="180"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="social"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:id="@+id/social_text"
                    android:layout_toRightOf="@id/arrows_top"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop"
                android:adjustViewBounds="true"
                android:layout_toRightOf="@id/center_social_layout"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cow_name"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cow_name_garnish_left"
                android:src="@drawable/garnish_diamond"
                android:layout_toLeftOf="@id/cow_name_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fulan"
                android:id="@+id/cow_name_text"
                android:textColor="#8f6363"
                android:textSize="32dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cow_name_garnish_right"
                android:src="@drawable/garnish_diamond"
                android:layout_toRightOf="@id/cow_name_text"/>
        </RelativeLayout>
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="com.kelompok16.supercow.CowFragment"
            tools:layout="@layout/fragment_cow"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">
        </fragment>
        <!--TODO : Ganti font familynya jadi Alegriya Sans-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overall: She needs a little bit care"
            android:textSize="22dp"
            android:textColor="#8f6363"
            android:textAlignment="center"
            android:textStyle="italic"/>
        <!--TODO:Mungkin bisa kali ya nge-set paddingnya di kode program nanti-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventory_home_drawer"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:background="#e1e3d2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/customarrow"
                android:id="@+id/arrows_top_inventory"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:scaleType="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventory_drawer_text"
                android:text="inventory"
                android:textColor="#000000"
                android:layout_toRightOf="@id/arrows_top_inventory"
                android:textSize="40dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
